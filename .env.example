# Default Model Selection
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=anthropic/claude-3-5-sonnet-20241022
DEFAULT_IMAGE_PROVIDER=dalle  # Options: dalle, imagen4, flux
