# LLM Provider API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
# Required for gpt-oss-120b (default LLM)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
REPLICATE_API_TOKEN=your-replicate-token-if-needed

# Google Cloud AI Platform (for Imagen4)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_PROJECT_ID=your-google-project-id

# Default Model Selection
DEFAULT_LLM_PROVIDER=huggingface
DEFAULT_LLM_MODEL=openai/gpt-oss-120b
DEFAULT_IMAGE_PROVIDER=dalle  # Options: dalle, imagen4, flux
DEFAULT_ILLUSTRATION_STYLE=digital_art

# Flux local pipeline (diffusers) settings
FLUX_USE_PIPELINE=false
FLUX_PIPELINE_MODEL_ID=black-forest-labs/FLUX.1-dev
#FLUX_PIPELINE_DTYPE=float16
#FLUX_PIPELINE_DEVICE=cuda
#FLUX_PIPELINE_VARIANT=fp16
#FLUX_PIPELINE_REVISION=main

# HuggingFace Inference Settings
HUGGINGFACE_ENDPOINT_URL=
HUGGINGFACE_PIPELINE_TASK=text-generation
HUGGINGFACE_DEVICE=cpu
HUGGINGFACE_MAX_NEW_TOKENS=512
HUGGINGFACE_TEMPERATURE=0.7
HUGGINGFACE_TIMEOUT=60

# HuggingFace Image Generation (Flux/Diffusers)
HUGGINGFACE_FLUX_ENDPOINT_URL=
HUGGINGFACE_IMAGE_MODEL=black-forest-labs/FLUX.1-dev
HUGGINGFACE_IMAGE_ENDPOINT_URL=
HUGGINGFACE_IMAGE_PROVIDER=huggingface

# Remote / Offline Modes
ILLUSTRATOR_REMOTE_API_URL=http://127.0.0.1:8000
ILLUSTRATOR_API_KEY=
ILLUSTRATOR_ENFORCE_REMOTE=false
ILLUSTRATOR_OFFLINE_MODE=false

# Database Settings
MONGODB_URI=mongodb://localhost:27017
MONGO_URL=mongodb://localhost:27017
MONGO_DB_NAME=illustrator
MONGO_USE_MOCK=false

# Optional Legacy Settings
MAX_CHAPTER_LENGTH=50000  # Currently unused but kept for backward compatibility
